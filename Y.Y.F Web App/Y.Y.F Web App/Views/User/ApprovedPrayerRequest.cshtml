@model IEnumerable<Core.ViewModels.PrayerRequestViewModel>
@{
    ViewData["Title"] = "ApprovedPrayerRequest";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserDashboardLayout.cshtml";
    }
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Approved PrayerRequest</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Approved PrayerRequest</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="container mt-10">
        <div class="container mt-5">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    <h2 class="text-center mt-5 mb-5 font-weight-bold">Prayer Requests</h2>

                    @foreach (var prayerRequest in Model)
                    {
                        <div class="col-lg-12 col-sm-12">
                            <div class="card p-4" style="width:100%">
                                <div class="card-body d-flex">
                                   <span class="font-weight-bold">@prayerRequest.PrayerRequestTitle :</span>
                                    <p class="card-text ml-4">@prayerRequest.PrayerRequestDetails  ....  <i> Requested by @prayerRequest.Username </i></p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</main>
