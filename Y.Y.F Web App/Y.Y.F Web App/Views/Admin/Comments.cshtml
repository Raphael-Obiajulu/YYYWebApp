@model IEnumerable<Core.ViewModels.CommentsViewModel>
@{
    ViewData["Title"] = "Comments";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Comments</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Comments</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <section class="section" style="">
        <div class="row" style="margin-top:70px;">
            <div class="col-lg-14">
                <div class="">
                    @if (Model != null && Model.Count() > 0)
                    {
                        <div class="card-body">
                            <table class=" table table-striped table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th>S/NO</th>
                                        <th> Discussion Title</th>
                                        <th>Comment</th>
                                        <th>Username</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in Model)
                                    {
                                        <tr>
                                            <td>@comment.Id</td>
                                            <td>@comment.Discussion?.DiscussionTitle</td>
                                            <td>@comment.Message</td>
                                            <td>@comment.UserName</td>
                                            <td class="d-flex">
                                                <button class="btn btn-success m-1" onclick="Approvecomment('@comment.Id')">Approve</button>
                                                <button class="btn btn-success m-1" onclick="Declinecomment('@comment.Id')">Decline </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>NO DATA FOUND</p>
                    }
                </div>

            </div>
        </div>

    </section>

</main>
<!-- End #main -->
