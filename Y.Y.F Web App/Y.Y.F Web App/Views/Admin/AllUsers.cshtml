@model IEnumerable<Core.ViewModels.ApplicationUserViewModel>
@{
    ViewData["Title"] = "All Members";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1> All Registered Members</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">All Registered Members</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div style="float: right">
        @*  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#profileModal">Add Event</button> *@
        @* <button type="button" class="btn btn-success" data-toggle="modal" data-target="#profileModal">Add Event</button> *@
    </div>

    <section class="section" style="">
        <div class="row" style="margin-top:70px;">
            <div class="col-lg-12">
                <div class="">
                    @if (Model != null && Model.Count() > 0)
                    {
                        <div class="card-body">
                            <table class="table table-striped table-borderless datatable" style="font-size: small;">
                                <thead>
                                    <tr>
                                       @*  <th>S/NO</th> *@
                                        <th>First Name </th>
                                        <th>Last Name</th>
                                        <th>UserName</th>
                                        <th>Phone Number</th>
                                        <th>Email Address</th>
                                        <th>Gender</th>
                                        <th>Date Joined </th>
                                        <th>Member Pix </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                           @*  <td>@upComingvents.Id</td> *@
                                            <td>@user.FirstName</td>
                                            <td>@user.LastName</td>
                                            <td>@user.UserName</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>@user.Email</td>
                                            <td>@user.GenderName</td>
                                            <td>@user.DateCreated.ToString("D")</td>
                                            <td>
                                                <a class="btn btn-outline-success" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#IDimage" onclick="viewIDImage('@user.ProfileImage')">
                                                   <i class="bi bi-eye-fill" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-success" onclick="Deactivate('@user.Id')"> Deactivate</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>NO DATA FOUND</p>
                    }
                </div>

            </div>
        </div>
    </section>
</main>
<!-- End #main -->

<div class="modal fade" id="IDimage" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Member Picture </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 m-auto">
                        <img src="" height="100%" width="100%" class="rounded" alt="img" id="ImageId">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>